<div class="page-header">
  <h3>Property Use #<%= @property_use.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Activity</dt>
      <dd><%= @property_use.activity.name %></dd>

      <dt>Property</dt>
      <dd><%= @property_use.property.property_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/properties/<%= @property_use.property.id %>" class="btn btn-primary">
        Back to Property
      </a>
      <a href="/property_uses/<%= @property_use.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_property_use/<%= @property_use.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
