<!-- Validation failure messages -->
<% if @property_use.errors.any? %>
  <% @property_use.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Property Use #<%= @property_use.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_property_use/<%= @property_use.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for activity_id -->
      <div class="form-group">
        <label for="activity_id" class="control-label">
          Activity
        </label>
        <%= select_tag(:activity_id, options_from_collection_for_select(Activity.all, :id, :name), :class => "form-control") %>

      </div>

      <!-- Label and input for property_id -->
      <div class="form-group">
        <label for="property_id" class="control-label">
          Property
        </label>

        <%= select_tag(:property_id, options_from_collection_for_select(Property.all, :id, :property_name), :class => "form-control") %>

      </div>

      <button class="btn btn-warning">
        Update Property Use
      </button>
      or
      <a href="/property_uses/<%= @property_use.id %>">Cancel</a>
    </form>
  </div>
</div>
